<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProfileBook.Views.MainPage"
             Title="{Binding Title}">
    <StackLayout>
        <Entry x:Name="Login" Placeholder="Login" Margin="80,200,80,0"/>
        <Entry x:Name="Password"  Placeholder="Password" IsPassword="True" MaxLength="16" Margin="80,0,80,0"/>


        <Button x:Name="SignIn"
                Text="SignIN"
                BackgroundColor="Orange"
                BorderWidth="5"
                CornerRadius="10"
                TextColor="White"
                HorizontalOptions="Center"
                WidthRequest="260"
                Command="{Binding SignInCommand}"
                IsEnabled="{Binding IsButtonEnabled}"/>

        <Label TextColor="Blue" HorizontalOptions="Center" VerticalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="SignUp">
                        <Span.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateCommand}"></TapGestureRecognizer>
                        </Span.GestureRecognizers>
                    </Span>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </StackLayout>
</ContentPage>